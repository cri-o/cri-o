load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "go_default_library",
    srcs = [
        "anago.go",
        "build_version.go",
        "release.go",
        "repository.go",
        "version.go",
    ],
    importpath = "k8s.io/release/pkg/release",
    visibility = ["//visibility:public"],
    deps = [
        "//pkg/git:go_default_library",
        "//pkg/http:go_default_library",
        "//pkg/testgrid:go_default_library",
        "//pkg/util:go_default_library",
        "@com_github_pkg_errors//:go_default_library",
        "@com_github_sirupsen_logrus//:go_default_library",
    ],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [
        ":package-srcs",
        "//pkg/release/releasefakes:all-srcs",
    ],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "go_default_test",
    srcs = [
        "release_test.go",
        "repository_test.go",
        "version_test.go",
    ],
    embed = [":go_default_library"],
    deps = [
        "//pkg/git:go_default_library",
        "//pkg/release/releasefakes:go_default_library",
        "//pkg/util:go_default_library",
        "@com_github_blang_semver//:go_default_library",
        "@com_github_go_git_go_git_v5//:go_default_library",
        "@com_github_stretchr_testify//require:go_default_library",
    ],
)
